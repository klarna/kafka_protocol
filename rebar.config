{deps, [{crc32cer, "0.1.8"}]}.

{profiles,
  [ { test,
      [ {deps,
        [ {snappyer, "1.2.8"},
          {lz4b, "0.0.8"},
          {zstd, {git, "https://github.com/zmstone/zstd-erlang.git", {tag, "v0.3.0-zm"}}}
        ]}
      ]
    }
  ]
}.

{erl_opts, [ error
           , warn_unused_vars
           , warn_shadow_vars
           , warn_unused_import
           , warn_obsolete_guard
           , debug_info
           , {d, 'APPLICATION', kafka_protocol}
           ]}.

{eunit_opts, [verbose]}.
{cover_enabled, true}.
{edoc_opts, [{preprocess, true}]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, deprecated_function_calls,
               deprecated_functions]}.
